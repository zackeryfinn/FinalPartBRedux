@model IEnumerable<FinalPartB.Models.Person>

@{
    ViewBag.Title = "People";
}

<h2>People</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        
        <td>
            @Html.ActionLink("Details", "PeopleDetails", new {  id=item.Id }) 
        </td>
    </tr>
}

</table>
